<Window x:Class="WorkingWithMultipleWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkingWithMultipleWindows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Height="50px" KeyDown="ExpressionTextBox_KeyDown" x:Name="ExpressionTextBox"/>
        <TextBox Height="50px" KeyDown="ExpressionTextBox_KeyDown" x:Name="Expression2TextBox"/>
        <Button Height="50px" Click="Button_Click" Content="Submit"/>
        <TextBlock Height="50px" x:Name="ResultTextBox"/>
    </StackPanel>
</Window>
